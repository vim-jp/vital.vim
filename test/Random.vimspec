Describe Random
  Before all
    let R = vital#vital#new().import('Random')
  End

  Describe .next()
    It returns a random number
      let random = R.new('Xor128', [])
      for _ in range(10)
        let x = random.next()
        Assert IsNumber(x)
      endfor
    End
    It returns n random numbers
      let random = R.new('Xor128', [])
      for n in range(10)
        let x = random.next(n)
        Assert IsList(x)
        Assert LengthOf(x, n)
      endfor
    End
  End

  Describe .generate_canonical()
    It returns a random float number in 0.0 - 1.0
      let random = R.new('Xor128', [])
      for _ in range(100)
        let x = random.generate_canonical()
        Assert 0.0 <= x && x < 1.0
      endfor
    End
  End
End
